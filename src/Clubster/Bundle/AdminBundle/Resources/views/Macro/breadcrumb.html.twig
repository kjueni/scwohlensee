{% macro crumble(crumbs = {}, root_path, root_label) %}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        {% for crumb in crumbs %}
            {% if loop.last %}
                <li class="breadcrumb-item">{{ crumb.label }}</li>
            {% elseif crumb.url is defined %}
                <li class="breadcrumb-item">
                    <a href="{{ crumb.url }}" class="section">{{ crumb.label }}</a>
                </li>
            {% else %}
                <li class="breadcrumb-item">{{ crumb.label }}</li>
            {% endif %}
        {% else %}
            <li>
                <a href="{{ root_url|default('/') }}" class="section">{{ root_label|default('clubster.ui.root'|trans) }}</a>
            </li>
        {% endfor %}
    </ol>
</nav>
{% endmacro %}
