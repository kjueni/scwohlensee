<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>{% block title %}Clubster{% endblock %}</title>

    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    {% block metatags %}
    {% endblock %}

    {% block stylesheets %}
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    {% endblock %}
</head>

<body>
<div class="grid-x">
    <div class="cell">
        {% block topbar %}
        {% endblock %}
    </div>
</div>
<div class="grid-x">
    <div class="cell medium-6 large-2">
        {% block sidebar %}
        {% endblock %}
    </div>
    <div class="cell medium-6 large-10">
        <div id="content">
            {% block flash_messages %}
                {% include '@ClubsterAdmin/_flashes.html.twig' %}
            {% endblock %}

            {% block pre_content %}
            {% endblock %}

            {% block content %}
            {% endblock %}

            {% block post_content %}
            {% endblock %}
        </div>
    </div>
</div>

{% include '@ClubsterAdmin/Modal/_confirmation.html.twig' %}

{% block javascripts %}
{% endblock %}
</body>
</html>
