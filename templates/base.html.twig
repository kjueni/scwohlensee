<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% trans %}SC Wohlensee{% endtrans %}{% endblock %}</title>

        <!-- @todo that can't be right, check the correct way -->
        <link rel="icon" href="{{ asset('build/images/favicon.9c4ac701.ico') }}" type="image/ico" />
        <link rel="stylesheet" href="{{ asset('build/app.css') }}">
    </head>
    <body>
        <main class="scw-base-container">
            <header>
                {% block header %}
                    <div class="scw-logo">
                        <a href="{{ path('index') }}"></a>
                    </div>
                {% endblock %}
            </header>
            <nav>
                {% block navigation %}
                    {{ render(controller(
                    'App\\Controller\\NavigationController::indexAction'
                    )) }}
                {% endblock %}
            </nav>

            <section id="content" class="scw-content-container container">
                <div class="grid-x">
                    <div class="small-8 cell">
                        {% block content %}{% endblock %}
                    </div>
                    <aside class="small-4 cell">
                        {% block sidebar %}
                            sidebar
                        {% endblock %}
                    </aside>
                </div>
            </section>

            <footer>
                {% block footer %}
                    footer
                {% endblock %}
            </footer>
        </main>
        <script src="{{ asset('build/app.js') }}"></script>
    </body>
</html>
